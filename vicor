#!/data/data/com.termux/files/usr/bin/bash

videodir="${VICOR_VIDEO_DIR:-/storage/0123-4567/DCIM/Camera}"
outputdir="${VICOR_OUTPUT_DIR:-${HOME}/vicor/data}"
maxsize="${VICOR_MAX_SIZE:-720}"
aacquality="${VICOR_AAC_QUALITY:-2.0}"
suffix="${VICOR_FILE_SUFFIX:-mp4}"

function is_termux() {
    command -v termux-wake-lock > /dev/null 2>&1
}

function get_audio_flag() {
    keep_audio="$1"
    audio_quality="$2"

    case "${keep_audio:-y}" in
        n)
            echo -n "-an"
            break ;;
        *)
            case "${audio_quality:-o}" in
                s)
                    echo -n "-c:a aac -q:a ${aacquality}"
                    break ;;
                *)
                    echo -n "-acodec copy"
            esac
            break ;;
    esac
}

if [ -n "$1" ]; then
    file="$1"
else
    cd "${videodir}"
    ls *.${suffix}

    for file in *.${suffix}; do
        history -s "${file}"
    done

    read -e -p '> ' file
    if [ -z "${file}" ]; then
        last="$(ls *.${suffix} |tail -n 1)"
        read -e -p '> ' -i "${last}" file
    fi

    file="${videodir}/${file}"
fi

if [ ! -e "${file}" ]; then
    echo "File '${file}' does not exist, bailing out." >&2
    exit 1
fi

outfile="${outputdir}/$(basename "${file}" .${suffix}).${suffix}"

while true; do
    read -p "Video size: [o]riginal [s]mall " -n 1 video_size
    echo

    case "${video_size,,}" in
        o|s) break ;;
    esac
done

while true; do
    read -p "Keep audio? [Y/n] " -n 1 keep_audio
    if [[ -n ${keep_audio} ]]; then echo; fi

    keep_audio=${keep_audio:-y}
    case "${keep_audio,,}" in
        y|n) break ;;
    esac
done

if is_termux; then
    termux-wake-lock
    trap termux-wake-unlock EXIT
fi

if [[ "${video_size,,}" == "s" ]] ; then
    ffmpeg -i "${file}" \
    $(get_audio_flag ${keep_audio,,} ${video_size,,}) \
    -filter:v scale="w=(trunc(min(a*$maxsize\,$maxsize)/2)*2):h=(trunc(min($maxsize/a\,$maxsize)/2)*2)" \
    -c:v libx264 \
    -profile:v high \
    -preset medium \
    -crf 23 \
    "${outfile}"
elif [[ "${video_size,,}" == "o" ]] ; then
    ffmpeg -i "${file}" \
    $(get_audio_flag ${keep_audio,,} ${video_size,,}) \
    -vcodec libx264 \
    -profile:v high \
    "${outfile}"
else
    exit 1
fi

if is_termux; then
    termux-vibrate
    termux-wake-unlock
    trap - EXIT
    open_command='termux-open'
    send_command='termux-share -a send'
else
    open_command='xdg-open'
    send_command='xdg-email --attach'
fi

echo
echo "Old file: $(du -h "${file}")"
echo "New file: $(du -h "${outfile}")"

while true; do
    read -p "[v]iew [s]end [r]emove [q]uit " -n 1 ans
    echo

    case "${ans,,}" in
        v) $open_command "${outfile}" ;;
        s) $send_command "${outfile}" ;;
        r) rm "${outfile}"
           break ;;
        q) break ;;
    esac
done
